<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Use Material 3 Theme -->
    <style name="Theme.StadiaTool" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dynamic Colors (Material You) -->
        <item name="android:colorBackground">?attr/colorSurface</item>
        
        <!-- Customize Status Bar to Match Primary Color -->
        <item name="android:statusBarColor">#00497D</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Text will be white -->

        <!-- Customize Navigation Bar -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="WhiteDrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#FFFFFF</item>
    </style>
</resources>